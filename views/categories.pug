doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        meta(name='description' content='')
        title #{ title }
        link(href='/css/app.css' rel='stylesheet')
        link(href='/css/index.css' rel='stylesheet')
        link(href='/css/blog.css' rel='stylesheet')
        script(type='text/javascript' src="/js/index.js")
    body
        // header
        include categories-layout/header
        // main content
        main.container
            .row.g-5.mt-1
                .col-md-8
                    h3.pb-4.mb-4.fst-italic.border-bottom
                        | From #{navItem.category}
                    each post in posts
                        article.blog-post
                            h2.blog-post-title.mb-1 #{post.title}
                            p.blog-post-meta
                                | #{ post.created_at } by
                                |
                                a(href='#') #{ post.author }
                            p
                                | #{ post.body.slice(0, 500) }...
                            a(href=`/${ post.slug }`) Continue reading
                .col-md-4
                    .position-sticky(style='top: 2rem;')
                        // about
                        include sidebar/about
                        // archives
                        include sidebar/archives
                        // social links
                        include sidebar/social-links
        // footer
        include layouts/footer
