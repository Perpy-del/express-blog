doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        meta(name='description' content='')
        title #{ title }
        link(href='css/app.css' rel='stylesheet')
        link(href='css/index.css' rel='stylesheet')
        link(href='/css/blog.css' rel='stylesheet')
        script(type='text/javascript' src="/js/index.js")
    body
        // header
        include categories-layout/header
        // main content
        main.container
            .row.g-5.mt-1
                .col-md-8
                    h3.text-center.mb-4.fst-italic.border-bottom
                        | From #{blog.category}
                    article.blog-post
                        h2.blog-post-title.mb-1 #{blog.title}
                        p.blog-post-meta
                            | #{ blog.created_at } by
                            |
                            a(href='#') #{ blog.author }
                        p
                            | #{ blog.body }
                .col-md-4
                    .position-sticky(style='top: 2rem;')
                        // about
                        include sidebar/about
                        // archives
                        include sidebar/archives
                        // social links
                        include sidebar/social-links
        // footer
        include layouts/footer
